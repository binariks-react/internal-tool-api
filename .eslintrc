{
  "parser": "babel-eslint",
  "extends": [
    "react-app",
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "plugins": [
    "react",
    "import"
  ],
  "settings": {
    "react": {
      "version": "16.6"
    },
    "import/resolver": {
      "node": {
        "extensions": [
          ".js"
        ]
      }
    }
  },
  "env" : {
    "node" : true,
    "jest": true,
    "es6": true,
    "browser": true
  },
  "rules": {
    "accessor-pairs": 1,
    "array-callback-return": 2,
    "block-scoped-var": 2,
    "curly": ["error", "multi-line"],
    "default-case": 1,
    "dot-location": ["error", "property"],
    "dot-notation": 2,
    "eqeqeq": 2,
    "max-classes-per-file": ["error", 2],
    "no-undef": 2,
    "no-console": [2, { "allow": ["info", "error", "warn"] }],
    "no-constant-condition": [2, { "checkLoops": false }],
    "no-debugger": 1,
    "no-empty": 1,
    "no-irregular-whitespace": [1, { "skipStrings": true, "skipComments": true }],
    "no-alert": 2,
    "no-else-return": 2,
    "no-eq-null": 2,
    "no-eval": 2,
    "no-extend-native": 2,
    "no-extra-label": 2,
    "no-floating-decimal": 2,
    "no-implicit-coercion": [2, { "allow": ["!!", "+"] } ],
    "no-implied-eval": 2,
    "no-lone-blocks": 2,
    "no-multi-spaces": ["error", { "ignoreEOLComments": true }],
    "no-multi-str": 2,
    "no-new-func": 2,
    "no-new-wrappers": 2,
    "no-param-reassign": 2,
    "no-return-assign": 2,
    "no-self-compare": 2,
    "no-sequences": 2,
    "no-throw-literal": 2,
    "no-void": 2,
    "no-shadow": ["error", { "builtinGlobals": true, "allow": ["err", "error", "history", "status", "location", "name", "Text", "Range"] }],
    "no-shadow-restricted-names": 2,
    "no-use-before-define": 2,
    "prefer-promise-reject-errors": 2,
    "require-await": 1,

    "array-bracket-newline": ["error", { "multiline": true }],
    "array-bracket-spacing": ["error", "never"],
    "block-spacing": 2,
    "brace-style": 2,
    "camelcase": ["error", { "ignoreDestructuring": true }],
    "comma-dangle": ["error", "always-multiline"],
    "comma-spacing": ["error", { "before": false, "after": true }],
    "comma-style": ["error", "last"],
    "computed-property-spacing": 2,
    "eol-last": 2,
    "func-call-spacing": 2,
    "func-style": ["error", "expression"],
    "function-paren-newline": ["error", "consistent"],
    "indent": ["error", 2],
    "jsx-quotes": 2,
    "key-spacing": ["error", { "beforeColon": false, "mode": "strict" }],
    "keyword-spacing": 2,
    "linebreak-style": 2,
    "max-len": ["error", {
      "code": 120,
      "comments": 120,
      "ignoreTrailingComments": true,
      "ignoreUrls": true,
      "ignoreStrings": true,
      "ignoreTemplateLiterals": true
    }],
    "no-unused-vars": 2,
    "new-parens": 2,
    "newline-per-chained-call": ["error", { "ignoreChainWithDepth": 3 }],
    "no-array-constructor": 2,
    "no-bitwise": 2,
    "no-lonely-if": 2,
    "no-mixed-operators": 2,
    "no-multi-assign": 2,
    "no-multiple-empty-lines": 2,
    "no-nested-ternary": 1,
    "no-new-object": 2,
    "no-trailing-spaces": 2,
    "no-unneeded-ternary": 2,
    "no-whitespace-before-property": 2,
    "nonblock-statement-body-position": 2,
    "object-curly-spacing": ["error", "always"],
    "one-var": ["error", "never"],
    "one-var-declaration-per-line": 2,
    "operator-linebreak": ["error", "after"],
    "padded-blocks": ["error", "never"],
    "quote-props": ["error", "as-needed"],
    "quotes": ["error", "single"],
    "semi-spacing": 2,
    "semi": ["error", "always"],
    "space-before-blocks": 2,
    "space-before-function-paren": ["error", {
      "anonymous": "never",
      "named": "never",
      "asyncArrow": "always"
    }],
    "space-in-parens": 2,
    "space-unary-ops": ["error", { "words": true, "nonwords": false }],
    "switch-colon-spacing": 2,
    "template-tag-spacing": 2,

    "arrow-body-style": ["error", "as-needed"],
    "arrow-parens": [2, "as-needed", { "requireForBlockBody": true }],
    "arrow-spacing": 2,
    "no-duplicate-imports": 2,
    "no-useless-computed-key": 2,
    "no-useless-constructor": 1,
    "no-useless-rename": 2,
    "no-useless-escape": 0,

    "no-var": 2,
    "object-shorthand": ["error", "always"],
    "prefer-const": 1,
    "prefer-template": 2,
    "rest-spread-spacing": 2,

    "react/display-name": 0,
    "react/prop-types": 2,
    "react/no-unknown-property": 0,
    "react/no-unescaped-entities": 0,
    "react/default-props-match-prop-types": 2,
    "react/no-access-state-in-setstate": 2,
    "react/no-array-index-key": 2,
    "react/no-danger": 2,
    "react/no-did-update-set-state": 2,
    "react/no-multi-comp": ["error", { "ignoreStateless": true }],
    "react/no-redundant-should-component-update": 2,
    "react/no-this-in-sfc": 2,
    "react/no-unsafe": 2,
    "react/no-unused-prop-types": 2,
    "react/no-will-update-set-state": 2,
    "react/prefer-es6-class": 2,
    "react/prefer-stateless-function": 2,
    "react/require-default-props": 2,
    "react/jsx-boolean-value": 2,
    "react/jsx-closing-bracket-location": [1, "tag-aligned"],
    "react/jsx-curly-spacing": 2,
    "react/jsx-equals-spacing": 2,
    "react/jsx-first-prop-new-line": 2,
    "react/jsx-key": 2,
    "react/jsx-max-props-per-line": ["error", { "maximum": 4, "when": "always" }],
    "react/jsx-one-expression-per-line": ["error", { "allow": "single-child" }],
    "react/jsx-curly-brace-presence": ["error", "never"],
    "react/jsx-pascal-case": 2,
    "react/jsx-props-no-multi-spaces": 2,
    "react/jsx-tag-spacing": ["error", { "closingSlash": "never",
      "beforeSelfClosing": "always",
      "afterOpening": "never",
      "beforeClosing": "allow"
    }],
    "react/jsx-wrap-multilines": 2,

    "import/named": 2,
    "import/no-self-import": 2,
    "import/no-cycle": 2,
    "import/no-useless-path-segments": 2,
    "import/export": 2,
    "import/no-named-as-default": 2,
    "import/first": 2,
    "import/no-duplicates": 2,
    "import/order": 2,
    "import/newline-after-import": 2,
    "import/no-named-default": 2
  }
}
